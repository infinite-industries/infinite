upstream node_mvp {
  server 127.0.0.1:7779;
}

server {
  listen 80;
  server_name infinite.industries;

  # Let's encrypt
  location /.well-known/acme-challenge {
    root /var/www/letsencrypt;
    try_files $uri $uri/ =404;
  }

  location / {
    return 301 https://$host$request_uri;
  }
}

server {
  server_name infinite.industries;
  listen 443 ssl;

  ssl on;
   ssl_certificate /etc/letsencrypt/live/infinite.industries-0001/fullchain.pem; # managed by Certbot
   ssl_certificate_key /etc/letsencrypt/live/infinite.industries-0001/privkey.pem; # managed by Certbot


#  index index.html;
#  root /home/ubuntu/front_end_infinite/public;

  location / {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_pass_header Authorization;
    proxy_set_header Authorization $http_authorization;
    proxy_pass_header  Authorization;
    proxy_redirect off;
    proxy_read_timeout 600;
    proxy_connect_timeout 600;
    proxy_send_timeout    600;
    add_header Access-Control-Allow-Origin *;

    proxy_pass http://node_mvp;
  }

  log_not_found off;

  error_page 500 502 503 504 /500.html;
  client_max_body_size 252M;
  client_body_buffer_size 252M;
  keepalive_timeout 10;
}
