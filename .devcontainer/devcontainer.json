{
    "name": "Infinite Industries",
    "image": "mcr.microsoft.com/devcontainers/javascript-node:0-16",
    "dockerComposeFile": "docker-compose.yml",
    "description": "Includes a linked Includes Node.js, eslint, and yarn in a container linked to a Postgres DB container",
    "service": "infinite",
    "workspaceFolder": "/workspaces/${localWorkSpaceFolderBasename}",

    "postCreateCommand": {
      "api-server": "cd api-server && npm install",
      "web-portal": "cd web-portal && npm install"
    },

    "forwardPorts":  [3003,7779,"db:5432"]
}
