[Unit]
Description=Backup the database

[Service]
User=infinite
Group=infinite
Type=oneshot
WorkingDirectory=/home/infinite
Environment=NUM_BACKUPS=10
ExecStart=docker run --rm --env-file docker-files/ops.env -v /home/infinite/backups:/var/tmp/backups ghcr.io/infinite-industries/ops:{{ image_version }}

[Install]
WantedBy= multi-user.target

